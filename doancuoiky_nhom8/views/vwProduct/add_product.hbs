<form id="formAddPro" class="container justify-content-center" method="post" enctype="multipart/form-data">
    <div>
        <div class="card">
            <div class="card-header bg-warning font-bold text-center">
                <h2>Thêm sản phẩm</h2>
            </div>
            <div class="card-body">
