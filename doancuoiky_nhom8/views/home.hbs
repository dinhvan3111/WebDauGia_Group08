{{#section 'title'}}
    <title>Trang chủ</title>
{{/section}}
{{#section 'css'}}
    <style>
        .card>a{
            color: black;
            text-decoration: none;
        }
        .card>a:hover{
            color: black;
            text-decoration: none;
        }
        h5,h6{
            font-size: 12px;
        }
        .show-product{
            height: 100%;
        }
        .card-product-item{
            height: 355px;
        }
    </style>
{{/section}}
{{#section 'js'}}
    <script>
        $('.btn-like').on('click', function () {
            const id = $(this).attr('proID');
            $('#txtLike').val(id);
            $('#frmLike').submit();
        });
    </script>
{{/section}}
<div class="col-sm-12 col-md-10 col-xl-10 mt-3">

    <!-- Carousel section -->
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="img/carousel/auction-banner-copy-1000x474.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="img/carousel/auction-banner-template-ribbon-label-sign-177647990.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="img/carousel/man-on-stand-leading-auction-hold-gavel-people-vector-21144952.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- End Carousel section -->

