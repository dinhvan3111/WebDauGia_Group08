{{#section 'title'}}
    <title>Trang chủ</title>
{{/section}}
{{#section 'css'}}
    <style>
        .card>a{
            color: black;
            text-decoration: none;
        }
        .card>a:hover{
            color: black;
            text-decoration: none;
        }
        h5,h6{
            font-size: 12px;
        }
        .show-product{
            /*height: 355px;*/
            height: fit-content;
        }
        .card-footer{
        }
        .card-product-item{
            /*flex: 1 1 auto;*/
            flex-direction: column;

        }

        .new-product{
            width: 55%;
            font-size: 12px;
        }
        @media (min-width: 992px) and ( max-width: 1425px) {
            .new-product{
                width: 70%;
                font-size: 11px;
            }
        }
        @media ( max-width: 575px) {
            .new-product{
                width: 40%;
                font-size: 15px;
            }
        }
        .name-product,.date-product{
            display: -webkit-box;
            max-height: 3.2rem;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: normal;
            line-height: 1.6rem;
        }
        .name-product{

            -webkit-line-clamp: 1;
        }
        .date-product{
            -webkit-line-clamp: 2;
        }
    </style>
{{/section}}
{{#section 'js'}}
    <script>
        $('.btn-like').on('click', function () {
            const id = $(this).attr('proID');
            $('#txtLike').val(id);
            $('#frmLike').submit();
        });
    </script>
{{/section}}
<div class="col-sm-12 col-md-10 col-xl-10 mt-3">

    <!-- Carousel section -->
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="img/carousel/auction-banner-copy-1000x474.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="img/carousel/auction-banner-template-ribbon-label-sign-177647990.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="img/carousel/man-on-stand-leading-auction-hold-gavel-people-vector-21144952.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- End Carousel section -->

    <!-- Top product section -->
    <div class="top-product card mt-3">
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <div><span name="msg"></span></div>
                <div class="card mt-3">
                    <div class="card-header bg-warning font-bold">
                        Các sản phẩm sắp kết thúc
                    </div>
                    <div class="card-body" >
                        <div class="row">
                            {{#if products.nearTimeEnd}}
                                {{#each products.nearTimeEnd}}

                                <div class="top-product-item col-sm-6 mt-3 col-lg-3 col-xl">
                                    <div class="card show-product">
                                        {{#if isNew}}
                                            <div class="new-product text-white"><i class="fa fa-fire" aria-hidden="true"></i>
                                                Vừa mở đấu giá</div>
                                        {{/if}}
                                        <a href="/products/{{id}}">
                                        <div  class="card-product-item card-body">
                                            <img class="product-img-5-sidebar" src="img/products/{{id}}/thumb/{{img.thumb}}" alt="Sản phẩm">
                                            <h5 class="card-title name-product">{{name}}</h5>
                                            <h6 class="card-title name-product">Hiện tại: <span class="text-success">{{format_number price}} VNĐ</span></h6>
                                            <h6 class="card-title name-product">Mua ngay: <span  class="text-danger">{{format_number buy_now_price}} VNĐ</span></h6>
                                            <h6 class="card-title date-product">Đăng vào lúc: <span
                                                    class="text-info">{{time_start}}</span></h6>
<!--                                            <h6 class="card-title name-product">Đóng trong: <span class="text-danger">{{relativeTimeEnd}}</span></h6>-->
                                            {{#if price_color}}
                                                <h6 class="card-title name-product" >Đóng vào lúc: <span
                                                        class="text-info">{{relativeTimeEnd}}</span></h6>
                                            {{else}}
                                                <h6 class="card-title name-product">Đóng vào lúc: <span
                                                        class="text-danger">{{relativeTimeEnd}}</span></h6>
                                            {{/if}}
                                            {{#if bidHistory.length}}
                                                <h6 class="card-title name-product">Số lượt ra giá: <span
                                                        class="text-info">{{bidHistory.length}}</span></h6>
                                            {{else}}
                                                <h6 class="card-title name-product">Số lượt ra giá: <span
                                                        class="text-muted">Chưa có lượt ra giá nào</span></h6>
                                            {{/if}}
                                        </div>

                                            <div class="card-footer text-muted">

                                                {{#if isWatchList}}
                                                    <button class="btn btn-sm btn-outline-danger" disabled>
                                                        <div class=" name-product">
                                                            <i class="fa fa-heart " aria-hidden="true"></i>
                                                            Đã yêu thích
                                                        </div>
                                                    </button>

                                                {{else}}
                                                    <button proID ="{{id}}" class="btn btn-sm btn-outline-danger btn-like" >
                                                        <i class="fa fa-heart" aria-hidden="true"></i>
                                                        Yêu thích

                                                    </button>
                                                {{/if}}

                                            </div>
                                        </a>
                                    </div>
                                </div>

                                {{/each}}
                            {{else}}
                            <div><span>Chưa có sản phẩm nào</span></div>
                            {{/if}}


                        </div>

                    </div>
                </div>

