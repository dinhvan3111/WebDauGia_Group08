{{#section 'title'}}
    <title>Trang chủ</title>
{{/section}}
{{#section 'css'}}
    <style>
        .card>a{
            color: black;
            text-decoration: none;
        }
        .card>a:hover{
            color: black;
            text-decoration: none;
        }
    </style>
{{/section}}
{{#section 'js'}}
    <script>
        $('.btn-like').on('click', function () {
            const id = $(this).attr('proID');
            $('#txtLike').val(id);
            $('#frmLike').submit();
        });
    </script>
{{/section}}
<div class="col-sm-12 col-md-10 col-xl-10 mt-3">

    <!-- Carousel section -->
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="img/carousel/auction-banner-copy-1000x474.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="img/carousel/auction-banner-template-ribbon-label-sign-177647990.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="img/carousel/man-on-stand-leading-auction-hold-gavel-people-vector-21144952.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <!-- End Carousel section -->

    <!-- Top product section -->
    <div class="top-product card mt-3">
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <div><span name="msg"></span></div>
                <div class="card mt-3">
                    <div class="card-header bg-warning font-bold">
                        Các sản phẩm sắp kết thúc
                    </div>
                    <div class="card-body">
                        <div class="row">
                            {{#if products.nearTimeEnd}}
                                {{#each products.nearTimeEnd}}
                                <div class="top-product-item col-sm-6 mt-3 col-lg-3 col-xl">
                                    <div class="card h-100">
                                        <a href="/products/{{id}}">
                                        <div class="card-body">
                                            <img class="product-img-5-sidebar" src="img/products/{{id}}/thumb/{{img.thumb}}" alt="Sản phẩm">
                                            <h5 class="card-title">{{name}}</h5>
                                            <h6 class="card-title">Giá: <span class="text-danger">{{format_number price}} VNĐ</span></h6>
                                            <h6 class="card-title">Đóng trong: <span class="text-danger">{{relativeTimeEnd}}</span></h6>
                                        </div>
                                            <div class="card-footer text-muted">
                                                <a class="btn btn-sm btn-outline-success" href="/products/{{id}}" role="button">
                                                    <i class="fa fa-gavel" aria-hidden="true"></i>
                                                    Đấu giá ngay
                                                </a>
                                                {{#if isWatchList}}
                                                    <button class="btn btn-sm btn-outline-danger" disabled>
                                                        <i class="fa fa-heart" aria-hidden="true"></i>
                                                        Đã yêu thích
                                                    </button>

                                                {{else}}
                                                    <button proID ="{{id}}" class="btn btn-sm btn-outline-danger btn-like" >
                                                        <i class="fa fa-heart" aria-hidden="true"></i>
                                                        Yêu thích

                                                    </button>
                                                {{/if}}

                                            </div>
                                        </a>
                                    </div>
                                </div>
                                {{/each}}
                            {{else}}
                            <div><span>Chưa có sản phẩm nào</span></div>
                            {{/if}}


                        </div>
<!--                        {{#if products.nearTimeEnd}}-->
<!--                        <a class="btn btn-dark float-right mt-3 col-lg-2 col-sm-12" href="#" role="button">Xem thêm</a>-->
<!--                        {{/if}}-->
                    </div>
                </div>

                <div class="card mt-6 ">
                    <div class="card-header bg-warning font-bold">
                        Các sản phẩm có nhiều lượt ra giá nhất
                    </div>
                    <div class="card-body">
                        <div class="row">
                            {{#if products.mostBid}}
                                {{#each products.mostBid}}
                                <div class="top-product-item col-sm-6 mt-3 col-lg-3 col-xl">
                                    <div class="card h-100">
                                        {{#if isNew}}
                                            <div class="new-product bg-success text-white"><i class="fa fa-fire" aria-hidden="true"></i>
                                                Vừa mở đấu giá</div>
                                        {{/if}}
                                        <a href="/products/{{id}}">
                                        <div class="card-body">
                                            <img class="product-img-5-sidebar" src="img/products/{{id}}/thumb/{{img.thumb}}" alt="Sản phẩm">
                                            <h5 class="card-title">{{name}}</h5>
                                            <h6 class="card-title">Giá: <span class="text-danger">{{format_number price}} VNĐ</span></h6>
                                            <h6 class="card-title"><span class="text-danger">{{auctionCount}}</span> lượt đấu giá</h6>
                                            <h6 class="card-title">Đóng trong: <span class="text-danger">{{relativeTimeEnd}}</span></h6>
                                        </div>
                                        <div class="card-footer text-muted">
                                            <a class="btn btn-sm btn-outline-success" href="/products/{{id}}" role="button">
                                                <i class="fa fa-gavel" aria-hidden="true"></i>
                                                Đấu giá ngay
                                            </a>
                                            {{#if isWatchList}}
                                                <button class="btn btn-sm btn-outline-danger" disabled>
                                                    <i class="fa fa-heart" aria-hidden="true"></i>
                                                    Đã yêu thích
                                                </button>

                                            {{else}}
                                                <button proID ="{{id}}" class="btn btn-sm btn-outline-danger btn-like" >
                                                    <i class="fa fa-heart" aria-hidden="true"></i>
                                                    Yêu thích

                                                </button>
                                            {{/if}}
                                        </div>
                                        </a>
                                    </div>
                                </div>
                                {{/each}}
                            {{else}}
                            <div><span>Chưa có sản phẩm nào</span></div>
                            {{/if}}

                        </div>
<!--                        {{#if products.mostBid}}-->
<!--                            <a class="btn btn-dark float-right mt-3 col-lg-2 col-sm-12" href="#" role="button">Xem thêm</a>-->
<!--                        {{/if}}-->
                    </div>
                </div>

                <div class="card mt-6">
                    <div class="card-header bg-warning font-bold">
                        Các sản phẩm có giá cao nhất
                    </div>
                    <div class="card-body">
                        <div class="row">
                            {{#if products.highestPrice}}
                                {{#each products.highestPrice}}
                                <div class="top-product-item col-sm-6 mt-3 col-lg-3 col-xl">
                                    <a href="/products/{{id}}">
                                    <div class="card h-100">
                                        <div class="card-body">
                                            <img class="product-img-5-sidebar" src="img/products/{{id}}/thumb/{{img.thumb}}" alt="Sản phẩm">
                                            <h5 class="card-title">{{name}}</h5>
                                            <h6 class="card-title">Giá: <span class="text-danger">{{format_number price}} VNĐ</span></h6>
                                            <h6 class="card-title">Đóng trong: <span class="text-danger">{{relativeTimeEnd}}</span></h6>
                                        </div>
                                        <div class="card-footer text-muted">
                                            <a class="btn btn-sm btn-outline-success" href="/products/{{id}}" role="button">
                                                <i class="fa fa-gavel" aria-hidden="true"></i>
                                                Đấu giá ngay
                                            </a>
                                            {{#if isWatchList}}
                                                <button class="btn btn-sm btn-outline-danger" disabled>
                                                    <i class="fa fa-heart" aria-hidden="true"></i>
                                                    Đã yêu thích
                                                </button>

                                            {{else}}
                                                <button proID ="{{id}}" class="btn btn-sm btn-outline-danger btn-like" >
                                                    <i class="fa fa-heart" aria-hidden="true"></i>
                                                    Yêu thích

                                                </button>
                                            {{/if}}
                                        </div>
                                    </div>
                                    </a>
                                </div>
                                {{/each}}
                            {{else}}
                            <div><span>Chưa có sản phẩm nào</span></div>
                            {{/if}}


                        </div>
<!--                        {{#if products.highestPrice}}-->
<!--                            <a class="btn btn-dark float-right mt-3 col-lg-2 col-sm-12" href="#" role="button">Xem thêm</a>-->
<!--                        {{/if}}-->
                    </div>
                </div>
            </blockquote>
        </div>
    </div>
    <form id="frmLike" action="/products/like" method="post">
        <input id="txtLike" type="hidden" name="value_id_pro" value ="">
    </form>
    <!-- Top product section -->

</div>