{{#section 'title'}}
    <title>Lịch sử đánh giá {{fullName}}</title>
{{/section}}
{{#section 'css'}}
    <link rel="stylesheet" href="/css/style.css">
    <style>

        .img-avt {
            height: 150px;
            width: 150px;
        }

        .name-column {
            /*width: 400px;*/
        }

        .table td, .table th {
            vertical-align: middle;
            text-align: center;
            font-weight: bold;
        }

        th {
            font-size: 18px;
        }

        td>a{
            color: black;
            text-decoration: none;
        }
        td>a:hover{
            color: black;
            text-decoration: none;
            cursor: pointer;
        }
        .icon-emotion{
            font-size: 30px;
            color: #ffcc37;
        }
    </style>
{{/section}}
<div class="col-sm-12 mt-3">

    <div class="card">
        <h4 class="card-header bg-dark text-white">
            Chi tiết đánh giá <b>{{fullName}}</b>
        </h4>

        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                <tr>

                    <th class="name-column" scope="col">Tên sản phẩm</th>
                    <th scope="col">Ảnh đại diện</th>
                    <th scope="col">Tên người đánh giá</th>
                    <th scope="col">Like/Dislike</th>
                    <th scope="col">Nội dung đánh giá</th>
                </tr>
                </thead>
                <tbody>
                {{#if this.rate.length}}
                    {{#each this.rate}}

                        <tr >

                            <td><a style="color: blue;" href="/products/{{id}}" target="_blank">{{name}} <i style="font-size: 9px" class="fa fa-external-link " aria-hidden="true"></i></a></td>
                            <td><a href="/products/{{id}}" target="_blank"><img class="img-avt" src="/img/products/{{id}}/thumb/{{img}}"></a></td>
                            <td ><a style="color: blue;" href="/profile/{{id_acc}}" target="_blank">{{nameAssessor}}  <i style="font-size: 9px" class="fa fa-external-link " aria-hidden="true"></i></a></td>

                            {{#if mark}}
                                <td><i class="icon-emotion fa fa-thumbs-up" aria-hidden="true"></i></td>
                            {{else}}
                                <td><i class="icon-emotion fa fa-thumbs-down" aria-hidden="true"></i></td>
                            {{/if}}

                            <td>{{comment}}</td>


                        </tr>

                    {{/each}}
                {{else}}
                    <tr class="">
                        <td colspan="8" class="text-center">
                            <p>Chưa có lượt đánh giá!</p>
                        </td>
                    </tr>
                {{/if}}

                </tbody>
            </table>


        </div>


    </div>
    <nav style="position: relative;" class="mt-1 mb-2 float-right">
        <ul class="pagination">
            {{#if this.disablePre}}
                <li class="page-item disabled">
                    <a class="page-link" href="javascript:;" tabindex="-1">Previous</a>
                </li>
            {{else}}
                <li class="page-item">
                    <a class="page-link" href="?page={{this.prePage}}" tabindex="-1">Previous</a>
                </li>
            {{/if}}
            {{#each this.pageNumber}}
                {{#if isCurrent}}
                    <li class="page-item active"><a class="page-link" href="javascript:;">{{value}}</a></li>
                {{else}}
                    <li class="page-item"><a class="page-link" href="?page={{value}}">{{value}}</a></li>
                {{/if}}
            {{/each}}
            {{#if this.disableNext}}
                <li class="page-item disabled">
                    <a class="page-link" href="javascript:;">Next</a>
                </li>
            {{else}}
                <li class="page-item">
                    <a class="page-link" href="?page={{this.nextPage}}">Next</a>
                </li>
            {{/if}}
        </ul>
    </nav>


</div>