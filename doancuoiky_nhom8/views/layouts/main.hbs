<script>
    const collapse_items = document.querySelectorAll('.side-bar .collapse-items');
    const collapse_content = document.querySelectorAll('.collapse-content');
    collapse_items.forEach((item,index)=>{
        var content = collapse_content[index];
        item.onclick = function (){
            var temp = document.querySelector('.collapse-items.list-group-item.list-group-item-action:not(.collapsed)');
            var temp_content = document.querySelector('.collapse-content.collapse.show');
            if(temp != item){

                temp.classList.add('collapsed');
                temp.ariaExpanded = false;
                temp_content.classList.remove('show');

                item.classList.remove('collapsed');
                item.ariaExpanded = true;
                // content.classList.add('show');
            }
        }
    })
</script>
<script>
    $('.parents-category').on('click',function (){
        if($(this)[0].ariaExpanded === 'false'){
            $(this).children()[0].classList.remove('fa-caret-right');
            $(this).children()[0].classList.add('fa-caret-down');
        }
        else{
            $(this).children()[0].classList.remove('fa-caret-down');
            $(this).children()[0].classList.add('fa-caret-right');
        }
    })
    // var navItems = $('.nav-item');
    // for(let i =0; i < navItems.length; i++ ){
    //     if(navItems[i].innerText.includes(localStorage['active-nav'])){
    //         navItems[i].classList.add('active-nav');
    //     }
    // }
    // for(let i =0; i < navItems.length; i++ ){
    //     navItems[i].addEventListener('click',function (e){
    //         localStorage['active-nav'] = navItems[i].innerText;
    //     });
    // }
    var pagePath = window.location.pathname;
    $('.sub-category').on('click',function (e){
        // e.preventDefault();
        localStorage['ParentsCateId'] = $(this).parent().prev()[0].getAttribute('idCate');
        localStorage['SubCateId'] = $(this)[0].getAttribute('idCate');
    })
    $(document).ready(function() {

        if (pagePath.includes('/products/list')) {
            var ParentsCateId = localStorage['ParentsCateId'];
            var SubCateId = localStorage['SubCateId'];
            var listParents = $('.parents-category.collapse-items');
            var listSub = $('.sub-category');
            for (let i = 0; i < listParents.length; i++) {
                if (listParents[i].getAttribute('idCate') === ParentsCateId) {
                    listParents[i].firstElementChild.classList.remove('fa-caret-right');
                    listParents[i].firstElementChild.classList.add('fa-caret-down');
                    listParents[i].ariaExpanded = true;
                    listParents[i].classList.add('collapsed');
                }
            }
            for (let i = 0; i < listSub.length; i++) {
                if (listSub[i].getAttribute('idCate') === SubCateId) {
                    listSub[i].parentElement.classList.add('show');
                    listSub[i].classList.add('active-nav');
                }
            }
        }
        else{
            localStorage.clear();
        }
    })
    $('.category-field-item').on('click',function (e){
        e.preventDefault();
        var param = $(this).attr('category-id');
        console.log($(this).attr("href").replace("#",""));
        var content = $(this).text();
        $('.category-field').text(content);
        $('.input-group .search_cateID').attr("value",param);
    });

    $('.search-btn').on('click',function (e){
        var search_cateID = $('.input-group .search_cateID')[0].value;
        var search_param = $('.input-group .search_param')[0].value;
        if(search_cateID === ''){
            search_cateID = 0;
        }
        console.log(search_cateID);
        console.log(search_param);
        $(this).attr("href","/products/search_result?cateID=" + search_cateID +"&param="+ search_param);
        $(this).off('click').click();
    });

    $('.category-field-item-temp').on('click',function (e){
        e.preventDefault();
        var param = $(this).attr('category-id');
        console.log($(this).attr("href").replace("#",""));
        var content = $(this).text();
        $('.category-field-temp').text(content);
        $('.input-group .search_cateID_temp').attr("value",param);
    });

    $('.search-btn-temp').on('click',function (e){
        var search_cateID = $('.input-group .search_cateID_temp')[0].value;
