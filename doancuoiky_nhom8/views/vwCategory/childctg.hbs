{{#section 'title'}}
    <title>Danh mục</title>
    <link rel="icon" href="/img/icon.png">
{{/section}}
{{#section 'css'}}
    <link rel="stylesheet" href="/css/style.css">

{{/section}}
<div class="col-sm-12 mt-3">
    <div class="card">
        <h4 class="card-header bg-dark text-white">
            Danh mục
        </h4>
        <table class="table table-hover">
            <thead>
            </thead>
            <tbody>
            {{#each this.categories}}
                {{#if this.categories.length}}
                    <tr>
                        <td>Chưa có danh mục con</td>
                    </tr>
                {{else}}
                    <tr>
                        <!--                <th scope="row">{{id}}</th>-->
                        <td>{{name}}</td>
                    <form action="/admin/categories/del" method="post">
                        <td class="text-right">

                            {{#if @root/isAdmin}}

                                <input type="hidden" name="id" value="{{id}}">
                                <a class="btn btn-sm btn-primary" href="childctg/edit_category?id={{id}}" role="button">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>

                                <button class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>

                            {{/if}}
                        </td>
                    </form>
                    </tr>
                {{/if}}
            {{/each}}
            </tbody>
        </table>
        <div class="card-footer text-muted">
            <a class="btn btn-outline-secondary" href="/admin/categories" role="button">
                <i class="fa fa-backward" aria-hidden="true"></i>
                Quay lại
            </a>
            <a href="/admin/categories/childctg/{{parent_id}}/add_category" id="btn-add-ctg" type="button" class="btn btn-outline-success"><i
                    class="fa fa-plus"
                    aria-hidden="true"></i> Thêm danh mục
            </a>
        </div>
