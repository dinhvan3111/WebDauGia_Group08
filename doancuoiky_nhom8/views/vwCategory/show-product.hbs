{{#section 'title'}}
    <title>Danh sách sản phẩm</title>
    <link rel="icon" href="/img/icon.png">
    <link rel="stylesheet" href="/css/style.css">
{{/section}}
{{#section 'css'}}
    <style>
        .card-body > a{
            color: black;
            text-decoration: none;
        }
        .card-body > a:hover{
            color: black;
            text-decoration: none;
        }
        .reactbtn{
            font-size: 30px;
            color: #ffcc37;
        }
        .react-group input{
            display: none;
        }
        .modal-content .cancel-modal-body{
            padding:8px;
